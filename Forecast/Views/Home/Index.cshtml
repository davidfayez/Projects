@*@model Forecast.Models.WeatherInfoViewModel*@
<hr />


<div class="container">

    <div class="form-group col-md-12">
        <label class="control-label  col-md-4 ">Are you willing to write city name ?</label>
        <input type="checkbox" name="isCityText" id="isCityText" class="col-md-2" />
        <input type="text" class="form-control input-circle col-md-3" id="CityName" placeholder="Enter The City" readonly="readonly" />
        <input type="button" class="form-control col-md-2 btn btn-primary" value="Get Weather" id="btnGetWeather" />
    </div>
    <div class="form-group col-md-6" id="CountriesListID">
        <label class="control-label  col-md-4 ">Choose Country</label>
        @Html.DropDownList("Countries", null,new { @class = "form-control" })

    </div>
    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">pressure</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="pressure" readonly="readonly" />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">temperature</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="temperature" readonly="readonly" />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">Wind Speed</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="Wind_Speed" readonly="readonly" />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">min</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="min" readonly="readonly" />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">max</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="max" readonly="readonly" />
        </div>
    </div>

    <div class="form-group col-md-6">
        <label class="control-label  col-md-4 ">humidity</label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control input-circle" id="humidity" readonly="readonly" />
        </div>
    </div>

